---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Trabajo', href: '/trabajo' },
  { name: 'Writing', href: '/writing' },
];
---

<header class="bg-background border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-6 py-6">
    <nav class="flex items-center justify-between">
      <!-- Espaciador invisible izquierdo para centrar -->
      <div class="flex-1"></div>
      
      <!-- Navegación centrada -->
      <div class="flex items-center gap-8">
        {navItems.map((item) => (
          <a 
            href={item.href}
            class="text-text hover:text-accent transition-colors font-medium"
          >
            {item.name}
          </a>
        ))}
      </div>
      
      <!-- Botón derecha -->
      <div class="flex-1 flex justify-end">
        <a 
          href="/contacto"
          class="bg-accent text-white px-5 py-2.5 rounded-lg font-medium hover:opacity-90 transition-opacity"
        >
          Contáctame
        </a>
      </div>
    </nav>
  </div>
</header>